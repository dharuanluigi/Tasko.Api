{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/Tasko.Api.Domain/Tasko.Api.Domain.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/Tasko.Api.Domain/Tasko.Api.Domain.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/Tasko.Api.Domain/Tasko.Api.Domain.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "test",
      "command": "dotnet",
      "type": "process",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "args": [
        "test",
        "${workspaceFolder}/Tasko.Api.Tests/Tasko.Api.Tests.csproj",
        "/p:CollectCoverage=true",
        "/p:CoverletOutputFormat=\"opencover,lcov\"",
        "/p:CoverletOutput=./lcov"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}
